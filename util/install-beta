#!/bin/bash

if [[ "$OSTYPE" != "linux-gnu" ]]; then
  echo "Cannot install beta on $OSTYPE"
  exit 1
fi

rm -rf /usr/lib/zotero-beta
mkdir /usr/lib/zotero-beta
curl -L 'https://www.zotero.org/download/standalone/dl?platform=linux-x86_64&channel=beta' -o - | tar -xjf - --strip-components=1 -C /usr/lib/zotero-beta
