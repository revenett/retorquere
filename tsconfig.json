{
  "compilerOptions": {
    "importHelpers": true,
    "target": "es5",
    "disableSizeLimit": true,
    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": false,
    "preserveConstEnums": false,
    "sourceMap": false,
    "downlevelIteration": true,
    "lib": [ "es2017" ]
  },
  "include": [
    "content/**/*",
    "resource/**/*",
    "minitests/**/*",
    "webpack/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
